<%- include('header') %>

    <div class="auth-layout">
        <div class="auth-card">
            <div style="text-align: center; margin-bottom: 2rem;">
                <a href="/" class="brand">âœ¨ Muse AI</a>
            </div>

            <h1>System Login</h1>

            <% if (error) { %>
                <div
                    style="background: rgba(239, 68, 68, 0.2); color: #fca5a5; padding: 0.75rem; border-radius: 6px; margin-bottom: 1.5rem; text-align: center; font-size: 0.9rem;">
                    <%= error %>
                </div>
                <% } %>

                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for="username" class="sr-only">Username</label>
                            <input type="text" id="username" name="username" placeholder="Username" required
                                class="modern-input">
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">Password</label>
                            <input type="password" id="password" name="password" placeholder="Password" required
                                class="modern-input">
                        </div>
                        <button type="submit" class="btn-primary">Authenticate</button>
                    </form>

                    <p style="text-align: center; font-size: 0.9rem; color: var(--text-muted); margin-top: 1.5rem;">
                        New user? <a href="/register" style="color: var(--primary);">Initialize Account</a>
                    <div
                        style="text-align: center; margin-top: 1rem; border-top: 1px solid var(--border); padding-top: 1rem;">
                        <a href="/legal" style="font-size: 0.8rem; color: var(--text-muted);">Privacy & Terms</a>
                    </div>
        </div> <!-- End of auth-card -->
    </div>
    </p>
    </div>
    </div>

    <%- include('footer') %>